<%- layout("./layouts/main.ejs") %>

<!--  -->
<div class="container p-4">
  <div class="row">
    <div class="col-md-5 mx-auto">
      <div class="card card-header text-white bg-success">
        <h5 class="mx-auto">SignIn</h5>
      </div>
      <div class="card card-body">
        <form action="/signin" method="post">
          <div class="form-group">
            <input
              type="email"
              name="email"
              id=""
              class="form-control"
              placeholder="email"
            />
          </div>
          <div class="form-group">
            <input
              type="password"
              name="password"
              id=""
              class="form-control"
              placeholder="password"
            />
          </div>
          <button type="submit" class="btn btn-success btn-block">
            signIn
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
