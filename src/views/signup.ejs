<%- layout("./layouts/main.ejs") %>

<!--  -->

<div class="container p-4">
  <div class="row">
    <div class="col-md-5 mx-auto">
      <div class="card card-header text-white bg-success">
        <h5 class="mx-auto">SignUp</h5>
      </div>
      <div class="card card-body">
        <form action="/signup" method="post">
          <div class="form-group">
            <input
              type="email"
              name="email"
              id="email"
              class="form-control"
              placeholder="email"
            />
          </div>
          <div class="form-group">
            <input
              type="password"
              name="password"
              id="password"
              class="form-control"
              placeholder="password"
            />
          </div>
          <button type="submit" class="btn btn-success btn-block">
            signup
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
